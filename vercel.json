{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/index.html",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/users/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/api/my-hotels/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}